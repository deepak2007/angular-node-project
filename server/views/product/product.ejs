<%- include('../../views/head') %>

    <%- include('../../views/header') %>
        <div class="container">
            <a href="/products/product-add" class="btn btn-success m-2">Add New Product</a>
            <h3>Products List</h3>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Food</th>
                        <th>Image</th>
                        <th>Price</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0;i<products.length;i++) { %>
                        <tr>
                            <td>
                                <%= products[i].name %>
                            </td>
                            <td>
                                <%= products[i].food %>
                            </td>
                            <td>
                                <img src="<%= products[i].feature_image %>" height="30%" width="30%" />
                            </td>
                            <td>
                                <%= products[i].price %>
                            </td>
                            <td>
                                <a href="/products/<%= products[i]._id %>" class="btn btn-secondary">View Details</a>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>

        <%- include('../../views/footer') %>